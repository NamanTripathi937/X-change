<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".EditProfileActivity">

    <ImageView
        android:id="@+id/profileEditActivity_bannerImg"
        android:layout_width="0dp"
        android:layout_height="180dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/backgrounds/scenic" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView14"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="125dp"
        app:cardCornerRadius="50dp"
        app:cardElevation="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/profileEditActivity_logOutBtn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="40dp"
                app:cardElevation="5dp"
                app:layout_constraintBottom_toBottomOf="@+id/editProfileActivity_saveBtn"
                app:layout_constraintEnd_toStartOf="@+id/editProfileActivity_saveBtn"
                app:layout_constraintStart_toEndOf="@+id/editProfileActivity_cancelBtn"
                app:layout_constraintTop_toTopOf="@+id/editProfileActivity_saveBtn">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    app:srcCompat="@drawable/baseline_logout_24" />
            </androidx.cardview.widget.CardView>

            <EditText
                android:id="@+id/editProfileActivity_name"
                android:layout_width="340dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="65dp"
                android:background="@drawable/input_field_bgrd"
                android:backgroundTint="@color/pink_light3"
                android:drawableRight="@drawable/baseline_edit_24"
                android:drawablePadding="-25dp"
                android:ems="10"
                android:hint="Name"
                android:inputType="text"
                android:paddingHorizontal="15dp"
                android:paddingVertical="5dp"
                android:textAlignment="center"
                android:textColor="@color/indigo"
                android:textSize="28sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/editProfileActivity_location"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/input_field_bgrd"
                android:backgroundTint="@color/pink_light3"
                android:drawableRight="@drawable/baseline_edit_24"
                android:drawablePadding="-25dp"
                android:ems="10"
                android:hint="Location"
                android:inputType="text"
                android:paddingHorizontal="15dp"
                android:paddingVertical="5dp"
                android:textAlignment="center"
                android:textColor="@color/indigo"
                android:textSize="22sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.495"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editProfileActivity_name" />

            <Button
                android:id="@+id/editProfileActivity_cancelBtn"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:backgroundTint="@color/indigo"
                android:text="Cancel"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/editProfileActivity_saveBtn"
                app:layout_constraintStart_toStartOf="@+id/editProfileActivity_name"
                app:layout_constraintTop_toBottomOf="@+id/editProfileActivity_location" />

            <Button
                android:id="@+id/editProfileActivity_saveBtn"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                android:backgroundTint="@color/indigo"
                android:text="Save"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/editProfileActivity_name"
                app:layout_constraintTop_toBottomOf="@+id/editProfileActivity_location" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView15"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="75dp"
        app:cardCornerRadius="75dp"
        app:cardElevation="23dp"
        app:layout_constraintEnd_toEndOf="@+id/profileEditActivity_bannerImg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                app:cardCornerRadius="500dp"
                app:cardElevation="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/profileEditActivity_profileImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/del_sample_3" />
            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/profileEditActivity_changeProfilePic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="-28dp"
        android:layout_marginTop="-28dp"
        app:cardCornerRadius="50dp"
        app:cardElevation="25dp"
        app:layout_constraintStart_toEndOf="@+id/cardView15"
        app:layout_constraintTop_toBottomOf="@+id/cardView15">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            app:srcCompat="@drawable/baseline_edit_24" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/profileEditActivity_changeBanner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        app:cardCornerRadius="50dp"
        app:cardElevation="30dp"
        app:layout_constraintEnd_toEndOf="@+id/profileEditActivity_bannerImg"
        app:layout_constraintTop_toTopOf="@+id/profileEditActivity_bannerImg">

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            app:srcCompat="@drawable/baseline_edit_24" />
    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView14"
        app:srcCompat="@drawable/illustration_4" />

</androidx.constraintlayout.widget.ConstraintLayout>